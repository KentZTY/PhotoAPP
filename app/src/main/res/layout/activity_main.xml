<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/sync"
        android:layout_toEndOf="@+id/photoButton"
        android:layout_toRightOf="@+id/photoButton"
        android:background="@drawable/selector"
        android:src="@drawable/camerabt" />

    <ImageButton
        android:id="@+id/photoButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/irisButton"
        android:layout_alignStart="@+id/irisButton"
        android:layout_alignTop="@+id/cameraButton"
        android:background="@drawable/selector"
        android:src="@drawable/photobt" />

    <ImageButton
        android:id="@+id/sync"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/irisButton"
        android:layout_toEndOf="@+id/irisButton"
        android:layout_toRightOf="@+id/irisButton"
        android:background="@drawable/selector"
        android:src="@drawable/logins" />

    <ImageButton
        android:id="@+id/irisButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/selector"
        android:src="@drawable/eyebg" />

    <ImageButton
        android:id="@+id/helpmain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector"
        android:src="@drawable/questionmark"
        android:text="Help" />

</RelativeLayout>
