<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cameraButton"
        android:src="@drawable/camerabt"
        android:background="@drawable/selector"
        android:layout_above="@+id/irisButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/photoButton"
        android:src="@drawable/photobt"
        android:background="@drawable/selector"
        android:layout_alignTop="@+id/cameraButton"
        android:layout_alignLeft="@+id/sync"
        android:layout_alignStart="@+id/sync" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sync"
        android:src="@drawable/login"
        android:background="@drawable/selector"
        android:layout_alignTop="@+id/irisButton"
        android:layout_toLeftOf="@+id/irisButton"
        android:layout_toStartOf="@+id/irisButton" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/eyebg"
        android:background="@drawable/selector"
        android:id="@+id/irisButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="82dp" />

</RelativeLayout>
